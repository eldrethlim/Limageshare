<div class="spacing">
  <div id=<%= "comment-#{comment.id}" %> >
    <div class="spacing">
      <b><%= comment.user.username %></b> (<%= time_ago_in_words(comment.created_at) %> ago)
      <% if current_user == comment.user %>
        <%= link_to comment_url_helper(comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'} do %>
          <data-toggle="tooltip" data-placement="bottom" title="Delete image"><span class="glyphicon glyphicon-trash"></span>
        <% end %>
      <% end %>
    </div>
    
    <div class="panel panel-default">
      <h5><%= comment.body %></h5>
    </div>
  </div>
</div>