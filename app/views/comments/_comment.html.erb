<div id="comment_<%=comment.id%>">
  <div class="spacing">
    <div class="spacing">
      <b><%= comment.user.username %></b> (<%= time_ago_in_words(comment.created_at) %> ago)
      <% if current_user == comment.user %>
        <%= link_to comment_url_helper(comment), method: :delete, remote: true, data: {confirm: 'Are you sure you want to delete this comment?'} do %>
          <data-toggle="tooltip" data-placement="bottom" title="Delete comment"><span class="glyphicon glyphicon-trash"></span>
        <% end %>
      <% end %>
    </div>
    
    <div class="panel panel-default">
      <% if current_user == comment.user %>
        <h5><%= link_to comment.body, edit_image_comment_path(comment.image, comment), id: "edit_comment_#{comment.id}_link", remote: true, data: {disable_with: comment.body } %></h5>
      <% else %>
        <h5><%= comment.body %></h5>
      <% end %>
    </div>
  </div>
</div>