<div id="edit_form_comments_container">
  <%= form_for [image, comment], remote: true do |f| %>
    
    <div class="form-group">
      <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment here" %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
      <%= link_to "Cancel", "#", class: 'btn btn-info', id: 'cancel_edit' %>
    </div>
  <% end %>
</div>