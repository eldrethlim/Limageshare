<div id="form_comments_container">
  <%= form_for [image, comment] do |f| %>
    
    <div class="form-group">
      <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment here" %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>