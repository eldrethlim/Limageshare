<div class="container">

  <h2>Sign in</h2>

  <div class="col-md-6">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group spacing">
        <%= f.label :username %><br>
        <%= f.text_field :username, class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group spacing">
        <%= f.label :password %><br>
        <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="form-group spacing">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>  <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="spacing"><%= f.submit "Sign in", class: 'btn btn-success', data: {disable_with: 'Signing in..'} %> <%= link_to "Back", :back, class: 'btn btn-info', data: {disable_with: 'Backing up..'} %></div>
    <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>